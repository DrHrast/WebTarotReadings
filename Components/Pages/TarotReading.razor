@page "/TarotReading"

@rendermode InteractiveServer
@using WebTarotReadings.Services
@using WebTarotReadings.Models

<header>
    <h3>TarotReading</h3>
</header>

<div class="reader_container">
    @foreach (var card in tarotCards)
    {
        <div class="tarot_card" @onclick="() => FlipCard()">
            <div class="card_inner @(isFlipped ? "flipped" : "")">
                <div class="card_front">
                    <img src="@imageSrc"/>
                </div>
                <div class="card_back">
                    <p class="card_name">@card.Key</p>
                    <p class="card_text">@card.Value</p>
                </div>
            </div>
        </div>
    }
</div>
<div class="table">

</div>

@code {
    [Inject] private TarotCardsService tarotCardsService { get; set; }
    private bool isFlipped = false;
    private string imageSrc = "";
    Dictionary<string, string> tarotCards = new();
    Random random = new Random();

    protected override void OnInitialized()
    {
        tarotCards = tarotCardsService.GenerateNewCards();
    }

    private void FlipCard()
    {
        isFlipped = true; 
    }
}
